<!DOCTYPE html>
<html lang="en">
   <%- include('./partials/head.ejs') %>
<body>
    <div class="ball-container">
        <a class="back-button" href="/pokemon"><button>&#8678</button></a>
        <div class="ball">
            <div class="ball-content">
                <div class="show-banner">
                    <img src="<%- pokemon.img  %> " alt="<%= pokemon.name%> image">
                    <p id="id">ID: <%= pokemon.id %> </p>
                </div>
                <div class="inner-circle">
                    <h3><%= pokemon.name.toUpperCase()%> </h3>
                </div>
                
               <div class="show-body">
                    <div class="type-container">
                        <h4>Type:</h4>
                        <ul class="type">
                             <% for(let i = 0; i < pokemon.type.length; i++) { %>
                             <li><%= pokemon.type[i] %> </li> 

                             <%} %> 
                        </ul>
                    </div>
                   
                    
                        <div class="stats">
                             <ul class="stats-list">
                            
                                 <% if(pokemon.stats){
                                    for(let stat in pokemon.stats) { %>
                                    <li><%= stat %>:<span><%= pokemon.stats[stat] %> </span>  </li> 
                                <% }} else { %> 
                                    <li>hp:<%= pokemon.hp%></li>
                                    <li>attack: <%= pokemon.attack%></li>
                                    <li>defence: <%= pokemon.defence%></li>
                                    <li>spattack: <%= pokemon.spattack%></li>
                                    <li>spdefense: <%= pokemon.spdefense%></li>
                                    <li>speed: <%= pokemon.speed%></li>

                            <% }%>
                             </ul>
   
                         </div>
                        

                     <div class="extra">
                        <% if(pokemon.classification ){ %> 
                        <p><%= pokemon.classification%></p>
                        <% } else { %>
                            <p><%= pokemon.misc.classification%></p>
                            <% } %> 
                       

                     </div>
               </div>
            </div>
             
        </div>
        <a id="show-edit" href="/pokemon/<%= index%>/edit/"><button>edit</button></a>
    </div>



</body>
</html>