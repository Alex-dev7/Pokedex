<!DOCTYPE html>
<html lang="en">
   <%- include('./partials/head.ejs') %>
<body>
    <div class="ball-container">
        <a class="back-button" href="/pokemon"><button>&#8678</button></a>
        <div class="ball">
            <div class="ball-content">
                <div class="show-banner">
                    
                    <img src="<%- data.img  %> " alt="<%= data.name%> image">
                    <p id="id">ID: <%= data.id %> </p>
                </div>
                <div class="inner-circle">
                    <h3><%= data.name.toUpperCase()%> </h3>
                </div>
                
               <div class="show-body">
                    <div class="type-container">
                        <h4>Type:</h4>
                        <ul class="type">
                             
                             <% for(let i = 0; i < data.type.length; i++) { %>
                             <li><%= data.type[i]  %> </li> 
                             <% } %> 
                             
                        </ul>
                    </div>
                   
                    
                        <div class="stats">
                             <ul class="stats-list">
                            
                                 <% for(let stat in data.stats) { %>
                                    <li><%= stat %>:<span><%= data.stats[stat] %> </span>  </li> 
                                <% } %> 
                             </ul>
   
                         </div>

                     <div class="extra">
                        <p><%= data.misc.classification  %> </p>
                       

                     </div>
               </div>
            </div>
             
        </div>
       
    </div>



</body>
</html>